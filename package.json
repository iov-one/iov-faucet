{
  "name": "iov-faucet",
  "version": "0.0.1",
  "description": "Typescript demo faucet",
  "main": "index.js",
  "author": "Isabella Dell <isabella@iov.one>",
  "license": "Apache-2.0",
  "scripts": {
    "format": "prettier --write --loglevel warn \"./src/**/*.ts\"",
    "lint": "tslint -t verbose --project .",
    "prebuild": "yarn format && yarn lint",
    "build": "tsc",
    "start": "node build/index.js start db/test.db password bns",
    "initialize": "rm -rf db/test.db/ && node build/index.js initialize db/test.db password bns"
  },
  "devDependencies": {
    "prettier": "^1.14.3",
    "tslint": "^5.11.0",
    "tslint-immutable": "^4.8.0",
    "typescript": "^3.1.3"
  },
  "dependencies": {
    "@iov/core": "^0.7.0-alpha.1",
    "@iov/lisk": "^0.7.0-alpha.1",
    "ip": "^1.1.5",
    "koa": "^2.5.3",
    "koa-bodyparser": "^4.2.1",
    "leveldown": "^4.0.1",
    "levelup": "^3.1.1"
  }
}
