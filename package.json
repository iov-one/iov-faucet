{
  "name": "iov-faucet",
  "version": "0.0.1",
  "description": "Typescript demo faucet",
  "author": "IOV SAS <admin@iov.one>",
  "license": "Apache-2.0",
  "scripts": {
    "format": "prettier --write --loglevel warn \"./src/**/*.ts\"",
    "lint": "tslint -t verbose --project .",
    "prebuild": "yarn format && yarn lint",
    "build": "tsc",
    "test": "mocha \"./build/**/*.spec.js\"",
    "dev-init": "rm -rf db/test.db/ && ./bin/iov-faucet init db/test.db password bns \"degree tackle suggest window test behind mesh extra cover prepare oak script\"",
    "dev-start": "./bin/iov-faucet start db/test.db password bns \"ws://localhost:22345\"",
    "dev-refill": "./bin/iov-faucet refill db/test.db password bns \"ws://localhost:22345\"",
    "dev-lisk-init": "rm -rf db/dev-lisk.db/ && FAUCET_CONCURRENCY=2 ./bin/iov-faucet init db/dev-lisk.db password lisk \"wagon fashion notice rough dinosaur physical mind waste until gun glass mixed\"",
    "dev-lisk-start": "./bin/iov-faucet start db/dev-lisk.db password lisk \"https://testnet.lisk.io\"",
    "dev-lisk-refill": "./bin/iov-faucet refill db/dev-lisk.db password lisk \"https://testnet.lisk.io\""
  },
  "bin": {
    "iov-faucet": "bin/iov-faucet"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/koa": "^2.0.46",
    "@types/mocha": "^5.2.5",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "prettier": "^1.14.3",
    "tslint": "^5.11.0",
    "tslint-immutable": "^4.8.0",
    "typescript": "^3.1.3"
  },
  "dependencies": {
    "@iov/core": "^0.7.0",
    "@iov/lisk": "^0.7.0",
    "@types/koa-bodyparser": "^5.0.1",
    "koa": "^2.5.3",
    "koa-bodyparser": "^4.2.1",
    "leveldown": "^4.0.1",
    "levelup": "^3.1.1"
  }
}
